<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Pages.ViewNote">
    <StackLayout>
        <Label Text="{Binding Name}" FontSize="30"/>
        <Label Text="{Binding NoteBody}" FontSize="20"/>
        <Button Text="Edit" Clicked="Button_Clicked_1"/>
        <Button Text="Close" Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>
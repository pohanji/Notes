<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Pages.AddNote">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Entry Grid.Row="0" Placeholder="Note name" x:Name="Name"/>
        <Entry Grid.Row="1" Placeholder="Note body" x:Name="Body"/>
        <Button Grid.Row="4" Text="Save" VerticalOptions="End" Clicked="Button_Clicked"/>
    </Grid>
</ContentPage>